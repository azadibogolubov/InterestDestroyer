<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/green_gradient"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chooseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="36sp"
        android:text="Please choose an option:"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/amortize"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_below="@id/chooseTxt"
        android:text="@string/amortizationUI"
        android:onClick="amortize"
        android:background="@drawable/circle_button" />

    <Button
        android:id="@+id/graphical"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_alignTop="@id/amortize"
        android:text="@string/see_graphical_results"
        android:onClick="showGraphicalResults"
        android:background="@drawable/circle_button" />

    <Button
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_below="@id/amortize"
        android:text="@string/email_results_UI"
        android:onClick="sendResults"
        android:background="@drawable/circle_button" />

    <Button
        android:id="@+id/extra"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_alignTop="@id/email"
        android:layout_below="@id/amortize"
        android:text="@string/savings_UI"
        android:onClick="extraPayment"
        android:background="@drawable/circle_button" />
</RelativeLayout>