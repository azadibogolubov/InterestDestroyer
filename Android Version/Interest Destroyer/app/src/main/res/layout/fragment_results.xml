<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                tools:context="com.tutorazadi.interestdestroyerandroid.ResultsFragment">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:textColor="@color/text_icons"
        android:text="@string/savings_amount"/>

    <TextView
        android:id="@+id/savingsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_icons"
        android:layout_below="@id/mainTxt"/>

    <TextView
        android:id="@+id/savingsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_icons"
        android:layout_below="@id/savingsAmount"/>
</RelativeLayout>
