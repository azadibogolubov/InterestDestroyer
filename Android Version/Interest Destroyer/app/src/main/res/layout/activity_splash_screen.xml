<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary"
    tools:context="com.tutorazadi.interestdestroyerandroid.SplashScreenActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/interestTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interest_logo"
            android:textColor="@color/primary_text"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/destroyerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interestTxt"
            android:textColor="@color/primary_text"
            android:text="@string/destroyer_logo"
            android:textSize="36sp" />
    </LinearLayout>
</RelativeLayout>